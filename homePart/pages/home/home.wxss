.head{
  width: 100%;
  height: 8rem;
  top: 0px;
}

.home-head{
  width: 100%;
  height: 8rem;
}

.middle{
  margin-top: 20rpx;
  height: 3rem;
  margin-left: 10%;
}

.middle-title{
  width: 100%;
  display: block;
  height: 2rem;
  text-align: center;
}

.middle-title div{
  border: solid 1rpx #e6e6e6;
  height: 2rem;
  margin: 20rpx 2rpx;
}

.middle .btn-group{
  float: left;
  width: 25%;
  font-size: 20rpx;
  border:0rem;
}

.middle .btn-group div{
  display: block;
  width: 90rpx;
  height: 90rpx; 
  border-radius: 50%;
  border: solid 3rpx #e6e6e6;
  text-align: center;
  cursor: pointer;
}

.middle .btn-group image{
  margin-top: 15rpx;
  width: 60rpx;
  height: 60rpx;
}

.middle .btn-group span{
  margin-left: 10rpx;
  margin-top: 20rpx;
}
