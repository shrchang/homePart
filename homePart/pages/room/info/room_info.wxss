/* pages/room/info/room_info.wxss */
.swiperContainer{
    position: relative;
    height: 250px;
}
.imageCount{
    width:40px;
    height:40rpx;
    background-color:#ffff;
    border-radius:10px;
    color:#050505b9;
    text-align:center;
    font-size:20rpx;
    position:absolute;
    top:210px;
    left:45%;
}

.roominfo{
  height: 100px;
  margin-left: 20px;
}
.roominfo-top{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.roomname{
  font-family: 'PingFang SC Medium';
  font-size: 20px;
}
.roominfo-bottom{
  display: flex;
  flex-direction: row;
  margin-top: 20px;
  color: rgba(102, 102, 102, 0.39);
}
.map-icon{
  width: 11px;
  height: 12px;
  padding: 3px;
}
.distance{
  font-size: 14px;
}
.price{
  margin-right: 20px;
  color: red;
}

.line-feed-25{
  height: 25px;
}

/* 横着的分割View样式 */
/*分割线样式*/
.divLine{
 background: rgb(217, 218, 217);
 width: 100%;
 height: 10rpx;
 margin-top: 4rpx;
}

.middle{
  margin-top: 20rpx;
  overflow: hidden;
}
.middle .md-header{
  width: 100%;
  margin-top: 30rpx;
  display: block;
  text-align: center;
}

.md-header hr{
  height: 1rpx;
  width: 120rpx;
  border: none;
  border-top: 1rpx solid #ddd;
  display: inline-block;
  margin-bottom: 15rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
