.confirm-head{
  border: solid 1rpx #e6e6e6;
  height: 260rpx;
  display: block;
  border-radius: 10rpx;
  margin: 30rpx 20rpx;
  box-shadow: 0 0 10rpx #ccc;
}

.order-card-left{
  width: 33%;
  float: left;
  height: 100%;
}

.order-card-left image{
  width: 200rpx;
  height: 160rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.order-card-right{
  float: left;
  width: 63%;
  height: 100%;
}

.order-card-right span{
  font-size: 0.6rem;
  color: #969696;
  width: 100%;
  display: block;
  margin-top: 12rpx;
  margin-left: 10rpx;
}

.card-title{
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.order-card-right .card-title label{
  font-size: 0.8rem;
}

.card-title span{
  font-size: 0.5rem;
  display: inline-block;
  width: auto;
  color: #969696;
}

.confirm-mid{
  border: solid 1rpx #e6e6e6;
  height: 450rpx;
  display: block;
  border-radius: 10rpx;
  margin: 30rpx 10rpx;
  box-shadow: 0 0 10rpx #ccc;
}

.confirm-mid view{
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.confirm-mid .confirm-mid-v{
  font-size: 30rpx;
  color: #696969;
  margin-top: 30rpx;
}

.confirm-mid-v label{
  width: 150rpx;
  display: inline-block;
  text-align: right;
}

.confirm-mid-title{
  margin-top: 35rpx;
}

.confirm-bottom{
  text-align: center;
  position: absolute;
  bottom: 30rpx;
  width: 100%;
}

.confirm-bottom button{
  width: 75%;
  font-size:38rpx;
  color: #fff;
  border-radius: 45rpx;
  background-color:#20B2AA;
}

.confirm-mid-btn button{
  width: 200rpx;
  font-size: 30rpx;
  border-radius: 20rpx;
  float: right;
  margin-right: 45rpx;
  color: #20B2AA;
  border-color: #20B2AA;
  margin-bottom: 10rpx;
}