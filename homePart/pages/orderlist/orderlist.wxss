.order-list-header{
  border: solid 1rpx #e6e6e6;
  height: 120rpx;
  display: block;
  border-radius: 10rpx;
  margin: 30rpx 20rpx;
  box-shadow: 0 0 10rpx #ccc;
}

.order-list-header view{
  display: inline-block;
  width: 33.3%;
  text-align: center;
  line-height: 120rpx;
  color: #696969;
  font-size: 30rpx;
  font-weight: 400;
  cursor: pointer;
}

.order-list-header .view-checked{
  color: #000;
  font-weight: 800;
  background-color: #fafafa;
  border-bottom: 10rpx solid green;
}

.order-content{
  margin-top: 80rpx;
}

.order-content view{
  border: solid 1rpx #e6e6e6;
  height: 300rpx;
  display: block;
  border-radius: 10rpx;
  margin: 30rpx 20rpx;
  box-shadow: 0 0 10rpx #ccc;
}
